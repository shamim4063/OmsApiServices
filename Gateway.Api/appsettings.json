{
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": { "Path": "/api/catalog/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/v1/{**catch-all}" } // rewrite /api/catalog/* -> /v1/*
        ]
      },
      "inventory-route": {
        "ClusterId": "inventory-cluster",
        "Match": { "Path": "/api/inventory/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/v1/{**catch-all}" }
        ]
      },
      "sales-route": {
        "ClusterId": "sales-cluster",
        "Match": { "Path": "/api/sales/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/v1/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "d1": { "Address": "http://catalog.api:8080" }
        }
      },
      "inventory-cluster": {
        "Destinations": {
          "d1": { "Address": "http://inventory.api:8080" }
        }
      },
      "sales-cluster": {
        "Destinations": {
          "d1": { "Address": "http://sales.api:8080" }
        }
      }
    }
  }
}

