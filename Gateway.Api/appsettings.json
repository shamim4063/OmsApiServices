{
  "ReverseProxy": {
    "Routes": {
      "catalog-route": {
        "ClusterId": "catalog-cluster",
        "Match": { "Path": "/api/catalog/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/v1/{**catch-all}" }
        ]
      },
      "procurement-route": {
        "ClusterId": "procurement-cluster",
        "Match": { "Path": "/api/procurement/{**catch-all}" },
        "Transforms": [
          { "PathPattern": "/v1/procurement/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "catalog-cluster": {
        "Destinations": {
          "d1": { "Address": "https://localhost:5001/" }
        }
      },
      "procurement-cluster": {
        "Destinations": {
          "d1": { "Address": "https://localhost:5002/" }
        }
      }
    }
  }
}